<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background_detail"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/ribbonTopBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#66000000"
            android:layout_marginTop="10dp"
            android:padding="13dp"
            android:clickable="true"
            android:layout_gravity="top">
            <ImageView
                android:id="@+id/btnCloseImage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/cc_list" />

            <ImageView
                android:id="@+id/btnHomeImage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/btnCloseImage"
                android:src="@mipmap/cc_home" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/logo_clear"/>
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="1"
                android:layout_toLeftOf="@id/logo"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"/>
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/ribbonBottomBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="#66000000"
            android:layout_marginBottom="10dp"
            android:elevation="6dp"
            android:padding="15dp"
            android:layout_gravity="bottom">
            <ImageView
                android:id="@+id/btnNextImage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/cc_forward"
                android:layout_alignParentRight="true"
                android:clickable="true" />
            <ImageView
                android:id="@+id/btnPreviousImage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/cc_back"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btnPlayImage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/cc_play"
                android:clickable="true"
                 />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>
